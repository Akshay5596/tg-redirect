pipeline {
    agent any

    stages {
        stage('pull-code') {
            steps {
                git credentialsId: 'bitjen', url: 'https://github.com/Akshay5596/tg-redirect.git'
            }
        }
        
        // stage('Build') {
        //     steps {
        //         // Install Node.js dependencies and build your project
        //         // For example:
        //         sh 'npm install'
        //         sh 'npm run build'
        //     }
        // }
        
        stage('SonarQube Scan') {
            steps {
                script {
                    def scannerHome = tool name: 'SonarQubeScanner'
                    withSonarQubeEnv('SonarQubeServer') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}    